<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/main_primary_dark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:windowBackground">@color/white</item>-->
    </style>
    <style name="immersivemode" parent="AppTheme">
        <!--透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--使状态栏，导航栏可绘制-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="FullscreenTheme" parent="immersivemode">
        <item name="windowNoTitle">true</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">

    </style>

    <style name="leadMode" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main" parent="leadMode">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="BottomDialog" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/upload_receipt_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/upload_receipt_dialog_out</item>
    </style>
    <!-- spinner -->
        <style name="spinner_style">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:paddingLeft">5dip</item>
        </style>

    <style name="switchCompat" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/main_style</item>
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/gray_hint</item>
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <item name="android:colorForeground">@color/main_style</item>

        <!-- Active thumb color & Active track color(30% transparency)
           switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色  30%这个颜色 -->
        <!--使用方法：
        在布局文件中给需要自定义控件中增加app:theme="@style/MySwitch"-->

    </style>

    <style name="download_alert_layout_style">
        <item name="android:windowEnterAnimation">@anim/download_alert_layout_in</item>
        <item name="android:windowExitAnimation">@anim/download_alert_layout_out</item>
    </style>

    <style name="Matisse.Pilipa" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/main_style</item>
        <item name="colorPrimaryDark">@color/main_primary_dark</item>
        <item name="toolbar">@style/Toolbar.Pilipa</item>
        <item name="album.title.color">@color/zhihu_album_title_text</item>
        <item name="album.count.color">@color/zhihu_album_count_text</item>
        <item name="album.selected">@android:color/white</item>
        <item name="album.placeholder">@color/zhihu_album_placeholder</item>
        <item name="album.emptyView">@drawable/ic_empty_zhihu</item>
        <item name="album.emptyView.color">@color/zhihu_empty_view</item>
        <item name="item.placeholder">@color/zhihu_item_placeholder</item>
        <item name="page.bg">@color/zhihu_page_bg</item>
        <item name="bottomToolbar.bg">@color/zhihu_bottom_toolbar_bg</item>
        <item name="bottomToolbar.preview.color">@color/zhihu_bottom_toolbar_preview</item>
        <item name="bottomToolbar.apply.color">@color/main_style</item>
        <item name="listPopupWindowStyle">@style/Popup.Pilipa</item>
        <item name="capture.color">@color/zhihu_capture</item>
    </style>

    <style name="Popup.Pilipa" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/zhihu_album_popup_bg</item>
    </style>

    <style name="Toolbar.Pilipa" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>


    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="custom_progressbar" parent="Base.Widget.AppCompat.ProgressBar">

    </style>
</resources>
