<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/tab"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <com.pilipa.fapiaobao.ui.widget.NavigationButton
        android:id="@+id/nav_item_tex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/d12"
        android:paddingRight="@dimen/d12"
        android:paddingTop="@dimen/d5" />

    <ImageView
        android:id="@+id/nav_item_publish"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/d2"
        android:layout_weight="1"
        android:padding="@dimen/d2"
        android:scaleType="centerInside"
        android:src="@drawable/selector_publish" />

    <com.pilipa.fapiaobao.ui.widget.NavigationButton
        android:id="@+id/nav_item_me"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingLeft="@dimen/d12"
        android:paddingRight="@dimen/d12"
        android:paddingTop="@dimen/d5" />
</LinearLayout>