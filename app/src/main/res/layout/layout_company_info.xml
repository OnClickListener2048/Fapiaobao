<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.pilipa.fapiaobao.ui.fragment.TexFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/company_name" />

        <TextView
            android:id="@+id/tv_companyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="北京康达科技有限公司" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/receipt_code" />

        <TextView
            android:id="@+id/tv_receptCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="XXXXXXXXXXXXXXXXXXX" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/address" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="天津市 南开产业园" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/phone_number" />

        <TextView
            android:id="@+id/tv_phoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="022-24564886" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/bank_name" />

        <TextView
            android:id="@+id/tv_bankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="中国建设银行" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/d5">

        <TextView
            android:layout_width="@dimen/d60"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="@string/account" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d5"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXX" />
    </LinearLayout>

</LinearLayout>
