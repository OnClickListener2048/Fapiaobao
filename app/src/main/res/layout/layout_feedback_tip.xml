<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/img"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:scaleType="fitXY"
        android:src="@drawable/feedback_tip" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:id="@+id/thanks"
        android:layout_marginTop="@dimen/d5"
        android:layout_marginLeft="@dimen/d50"
        android:text="@string/thanks"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/d50"
        android:layout_marginTop="@dimen/d5"
        android:layout_below="@+id/thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_to"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_style"
            android:text="15075661666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/link_too"/>
    </LinearLayout>



</RelativeLayout>