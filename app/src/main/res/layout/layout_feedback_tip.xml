<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_tip_bg"
        android:layout_margin="@dimen/d20"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30"
            android:scaleType="fitXY"
            android:src="@drawable/feedback_tip" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:id="@+id/thanks"
            android:layout_marginTop="@dimen/d5"
            android:layout_marginLeft="@dimen/d25"
            android:text="@string/thanks"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/d25"
            android:layout_marginTop="@dimen/d5"
            android:layout_marginBottom="@dimen/d30"
            android:layout_below="@+id/thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/link_to"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_style"
                android:text="15075661666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/link_too"/>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>