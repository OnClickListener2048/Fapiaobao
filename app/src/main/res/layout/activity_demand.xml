<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/d18"
            android:textColor="@color/title"
            android:text="@string/demand_details" />

        <ImageView
            android:id="@+id/demand_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:src="@mipmap/estimate_back_brawn" />

        <ImageView
            android:id="@+id/iv_demand_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d10"
            android:src="@drawable/share" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d10"
                android:orientation="horizontal">
                <com.pilipa.fapiaobao.ui.widget.HorizontalListView
                    android:id="@+id/horizontalListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.pilipa.fapiaobao.ui.widget.HorizontalListView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_receipt_type"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/d5"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:paddingTop="@dimen/d5"
                    android:text="@string/texi"
                    android:textColor="@color/white"
                    android:textSize="@dimen/d12" />
            </LinearLayout>
            <!--票据列表-->
            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/d10"
                android:paddingLeft="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:text="@string/collected_recript"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/d12" />

            <include
                layout="@layout/layout_receipt_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/d5">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dotted_line"></View>
                <!--红包信息1-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d60"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/d80"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/d15">

                        <TextView
                            android:id="@+id/tv_bounsAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100元"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:text="红包总额"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="剩余"
                                android:textSize="12dp"/>
                            <TextView
                                android:id="@+id/tv_leftAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="12dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元红包待领取"
                                android:textSize="12dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_deadline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:text="截止时间：2018-12-10"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@mipmap/finish" />
                    <!--mipmap/finish   on_the_way    close-->
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dotted_line"></View>
                <!--红包信息2-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d60"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/d80"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/d15">

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000元" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:text="需求总额"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_AlreadyCollected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/collected_amount"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_publishTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:text="发布时间：2017-10-11"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000元"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d5"
                            android:text="累计合计"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/dotted_line"></View>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d10"
                    android:paddingTop="@dimen/d10"
                    android:text="开票注意事项"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/d12" />

                <TextView
                    android:id="@+id/tv_attentions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/d2"
                    android:text="1.需要四星级以下住宿票"
                    android:textColor="@color/title_small"
                    android:textSize="@dimen/d12" />

            </LinearLayout>
            <!--售票信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/d10">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/d10"
                    android:paddingTop="@dimen/d10"
                    android:text="我的收票信息"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/d12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consignee"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d20"
                            android:text="古"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contact"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d20"
                            android:text="15045448484"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fixed_line"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d20"
                            android:text="17648484842"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address_details"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d20"
                            android:text="天津科技有限公司"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <!--公司详情-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_margin="@dimen/d20"
                android:background="@drawable/receipt_info_bg"
                android:elevation="@dimen/d5"
                android:orientation="vertical"
                android:translationZ="@dimen/d5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d20"
                        android:src="@mipmap/collect"
                        android:visibility="invisible" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fl_change"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/translate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/d20"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d30" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/scan_to_have_info" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/qr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/qr_code" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d30" />

                        <TextView
                            android:id="@+id/look_directly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:text="@string/look_directly"
                            android:textColor="@color/main_style" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/translate_details"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/d20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/company_name"
                                android:textColor="@color/text_normal_item" />

                            <TextView
                                android:id="@+id/company_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d20"
                                android:text="爱康鼎天津科技有限公司"
                                android:textColor="@color/title_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tex_number"
                                android:textColor="@color/text_normal_item" />

                            <TextView
                                android:id="@+id/tex_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d20"
                                android:text="爱康鼎天津科技有限公司"
                                android:textColor="@color/title_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/company_address"
                                android:textColor="@color/text_normal_item" />

                            <TextView
                                android:id="@+id/company_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d20"
                                android:text="爱康鼎天津科技有限公司"
                                android:textColor="@color/title_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/number"
                                android:textColor="@color/text_normal_item" />

                            <TextView
                                android:id="@+id/number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d20"
                                android:text="爱康鼎天津科技有限公司"
                                android:textColor="@color/title_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bank_name"
                                android:textColor="@color/text_normal_item" />

                            <TextView
                                android:id="@+id/bank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d20"
                                android:text="爱康鼎天津科技有限公司"
                                android:textColor="@color/title_small" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bank_account"
                                android:textColor="@color/text_normal_item" />

                            <TextView
                                android:id="@+id/bank_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d20"
                                android:text="爱康鼎天津科技有限公司"
                                android:textColor="@color/title_small" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_shut_down_early"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/d15"
                android:background="@drawable/bg_btn_normal"
                android:text="@string/shut_down_early"
                android:textColor="@color/white" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>