<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@mipmap/dotted_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/d5"
        android:paddingEnd="@dimen/d5"
        android:paddingStart="@dimen/d5"
        android:paddingTop="@dimen/d5">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_receipt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/bg_receipt_type"
                android:gravity="center"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/s12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bouns_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/s12"/>

                <TextView
                    android:id="@+id/tv_receive_bouns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d5"
                    android:paddingRight="@dimen/d5"
                    android:text=""
                    android:textColor="@color/amount_red"
                    android:textSize="@dimen/s12"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yuan"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/s12"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/d10"
            android:paddingTop="@dimen/d10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offered"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/s10"/>

                <TextView
                    android:id="@+id/tv_amount_offered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d5"
                    android:paddingRight="@dimen/d5"
                    android:text=""
                    android:textColor="@color/amount_red"
                    android:textSize="@dimen/s18"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yuan"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/d10"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginTop="@dimen/d10">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_receive"
                    android:gravity="center"
                    android:text="@string/offered_time"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/s10"/>

                <TextView
                    android:id="@+id/tv_receive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_receive"
                    android:layout_toEndOf="@+id/textView1"
                    android:gravity="left"
                    android:text=""
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/s10"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_arrival_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/d10"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/arrival"
            android:textColor="@color/bouns_1"
            android:textSize="@dimen/d12"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>