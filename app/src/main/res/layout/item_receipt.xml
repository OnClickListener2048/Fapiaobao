<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_receipt_selector"
    android:paddingStart="@dimen/d5"
    android:paddingEnd="@dimen/d5"
    android:paddingBottom="@dimen/d5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_receipt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/bg_receipt_type"
            android:gravity="center"
            android:textSize="@dimen/s12"
            android:paddingLeft="@dimen/d15"
            android:paddingRight="@dimen/d15"
            android:textColor="@color/white"
            android:text="" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bouns_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/text_normal_item"
                android:text="" />

            <TextView
                android:id="@+id/tv_receive_bouns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:text=""
                android:textColor="@color/amount_red"
                android:textSize="@dimen/s12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s12"
                android:textColor="@color/text_normal_item"
                android:text="@string/yuan" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:paddingTop="@dimen/d10"
        android:paddingBottom="@dimen/d10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/d10"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offered"
                android:textColor="@color/text_normal_item"
                android:textSize="@dimen/s10" />

            <TextView
                android:id="@+id/tv_amount_offered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/s18"
                android:textColor="@color/amount_red"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:text="" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/d10"
                android:textColor="@color/text_normal_item"
                android:text="@string/yuan" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_receive"
                android:textSize="@dimen/s10"
                android:gravity="center"
                android:textColor="@color/text_normal_item"
                android:text="@string/offered_time" />

            <TextView
                android:id="@+id/tv_receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_receive"
                android:layout_toEndOf="@+id/textView1"
                android:textSize="@dimen/s10"
                android:gravity="left"
                android:textColor="@color/text_normal_item"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_arrival_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="@dimen/d10"
        android:gravity="center"
        android:textSize="@dimen/d12"
        android:text="@string/arrival"
        android:textColor="@color/bouns_1"
        android:textStyle="bold" />
</LinearLayout>