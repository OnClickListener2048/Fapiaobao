<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_receipt_item"
    android:paddingLeft="@dimen/d5"
    android:paddingBottom="@dimen/d5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_receipt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_receipt_type"
            android:gravity="center"
            android:paddingLeft="@dimen/d15"
            android:paddingRight="@dimen/d15"
            android:textColor="@color/white"
            android:text="出租车票" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bouns_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收到红包" />

            <TextView
                android:id="@+id/tv_receive_bouns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:text="125.15"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan" />
            <!--<TextView-->
            <!--android:id="@+id/tv_receive_bouns"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:text="@string/receive" />-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:paddingTop="@dimen/d10"
        android:paddingBottom="@dimen/d10"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/d10"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/offered" />

            <TextView
                android:id="@+id/tv_amount_offered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/s20"
                android:paddingLeft="@dimen/d5"
                android:paddingRight="@dimen/d5"
                android:text="125.15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yuan" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginTop="@dimen/d5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_receive"
                android:gravity="center"
                android:text="@string/offered_time" />

            <TextView
                android:id="@+id/tv_receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_receive"
                android:layout_toRightOf="@+id/textView1"
                android:gravity="left"
                android:text="1997-01-01" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_arrival_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_margin="@dimen/d10"
        android:text="@string/arrival"
        android:textColor="@color/red"
        android:textStyle="bold" />
</LinearLayout>