<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/tip_bg"
        android:layout_gravity="center"
        android:orientation="vertical">
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/d6" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10"
            android:textColor="@color/white"
            android:textSize="@dimen/s12"
            android:text="@string/low_limit"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginRight="@dimen/d30"
            android:layout_marginTop="@dimen/d10"
            android:layout_below="@+id/thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:textSize="@dimen/s12"
                android:text="@string/low_limit_txt_tip"
                android:textColor="@color/white">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_marginRight="@dimen/d30"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginTop="@dimen/d10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/i_know"
                android:textSize="@dimen/s12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="@string/iknow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>