<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/d5"
        android:textSize="@dimen/s10"
        android:textColor="@color/text_normal_item"
        android:text=""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:background="@color/gray_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/d15"
        android:drawableEnd="@mipmap/enter_gray"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/d15"
                android:gravity="center_vertical"
                android:textColor="@color/title_small"
                android:textSize="@dimen/s12"
                android:layout_toStartOf="@+id/tv_time"
                android:layout_marginEnd="@dimen/d5"
                />
            <TextView
                android:id="@+id/tv_time"
                android:textColor="@color/text_normal_item"
                android:textSize="@dimen/s10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>