<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:overScrollMode="never">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/invoice_justify"
            android:textColor="@color/title"
            android:textSize="@dimen/s18"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/d48"
            android:layout_height="@dimen/d48"
            android:background="@drawable/drawable_scan"
            android:src="@mipmap/estimate_back_brawn"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d50"
                tools:src="@mipmap/justify_true"/>

            <TextView
                android:id="@+id/tv_invoice_justify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d14"
                android:layout_marginTop="@dimen/d14"
                android:textSize="@dimen/s27"
                tools:text="真票"/>

            <TextView
                android:id="@+id/tv_invoice_content"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#e6af7a"
                tools:text="此票验证已超过当天查验次数请明天再查哦~"/>

            <LinearLayout
                android:id="@+id/ll_invoice_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/d12"
                android:layout_marginStart="@dimen/d12"
                android:background="@drawable/shape_filter_area"
                android:orientation="vertical"
                android:paddingBottom="@dimen/d32"
                android:paddingEnd="@dimen/d12"
                android:paddingStart="@dimen/d12"
                android:paddingTop="@dimen/d12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/invoice_info"
                    android:textColor="#ad9e7e"
                    android:textSize="@dimen/s15"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d35">

                    <TextView
                        android:id="@+id/invoice_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/d10"
                        android:text="@string/invoice_code"/>

                    <TextView
                        android:id="@+id/tv_invoice_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/invoice_code"
                        android:textColor="#434343"
                        android:textSize="@dimen/s12"
                        tools:text="12022121"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d14">

                    <TextView
                        android:id="@+id/invoice_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/d10"
                        android:text="@string/invoice_date"/>

                    <TextView
                        android:id="@+id/tv_invoice_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/invoice_date"
                        android:textColor="#434343"
                        android:textSize="@dimen/s12"
                        tools:text="2018-12-12"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d36">

                    <TextView
                        android:id="@+id/invoice_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/d10"
                        android:text="@string/invoice_name"/>

                    <TextView
                        android:id="@+id/tv_invoice_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/invoice_name"
                        android:textColor="#434343"
                        android:textSize="@dimen/s12"
                        tools:text="大政公司"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d14">

                    <TextView
                        android:id="@+id/invoice_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/d10"
                        android:text="@string/invoice_value"/>

                    <TextView
                        android:id="@+id/tv_invoice_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/invoice_value"
                        android:textColor="#434343"
                        android:textSize="@dimen/s12"
                        tools:text="2000元"/>
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_scan_next"
                android:layout_width="185dp"
                android:layout_height="51dp"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d26"
                android:background="@drawable/shape_scan_next"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:text="扫下一张"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>