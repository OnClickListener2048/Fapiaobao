<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d18"
            android:textColor="@color/title"
            android:layout_centerInParent="true"
            android:text="@string/publish_share" />

        <ImageView
            android:background="@drawable/drawable_scan"
            android:id="@+id/publish_success_back"
            android:layout_width="@dimen/d48"
            android:layout_height="@dimen/d48"
            android:src="@mipmap/estimate_back_brawn" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d10"
            android:src="@mipmap/upload_scan"
            android:text="@string/filter"
            android:textColor="@color/main_style"
            android:visibility="gone" />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/d30" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_publish_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/publish_success" />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv_publish_success"
            android:id="@+id/ll_publish_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发布成功"
                android:textColor="@color/black"
                android:textSize="@dimen/s20" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent" />

        <Button

            android:id="@+id/btn_continue_to_supply"
            android:layout_width="0dp"
            android:layout_height="@dimen/d45"
            android:layout_weight="1"
            android:background="@drawable/selector_continue_to_supply"
            android:text="@string/continuous_to_supply"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_watch"
            android:layout_width="0dp"
            android:layout_height="@dimen/d45"
            android:layout_weight="1"
            android:background="@drawable/selector_checkout_publish"
            android:text="@string/watch"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d80" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:orientation="horizontal">

        <TextView
            android:background="@drawable/selector_transparent_to_gray"
            android:id="@+id/WeChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weixinfriend"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/WeChat"
            android:textSize="@dimen/s13" />


        <TextView
            android:background="@drawable/selector_transparent_to_gray"
            android:id="@+id/moments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/moments"
            android:gravity="center"
            android:src="@mipmap/moments"
            android:text="@string/moments"
            android:textSize="@dimen/s13" />


        <TextView
            android:background="@drawable/selector_transparent_to_gray"
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qqfriend"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/QQfriend"
            android:textSize="@dimen/s13" />


        <TextView
            android:background="@drawable/selector_transparent_to_gray"
            android:id="@+id/qzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qzone"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/qzone"
            android:textSize="@dimen/s13" />


        <TextView
            android:background="@drawable/selector_transparent_to_gray"
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weibo"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/weibo"
            android:textSize="@dimen/s13" />

    </LinearLayout>

</LinearLayout>