<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/d18"
            android:textColor="@color/title"
            android:layout_centerInParent="true"
            android:text="@string/publish_share" />

        <ImageView
            android:id="@+id/publish_success_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:src="@mipmap/upload_back" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d10"
            android:src="@mipmap/upload_scan"
            android:text="@string/filter"
            android:textColor="@color/main_style"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/publish_success" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_continue_to_supply"
            android:layout_width="0dp"
            android:layout_height="@dimen/d45"
            android:layout_weight="1"
            android:background="@drawable/shape_continue_to_supply_btn"
            android:text="@string/continuous_to_supply"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/btn_watch"
            android:layout_width="0dp"
            android:layout_height="@dimen/d45"
            android:layout_weight="1"
            android:background="@drawable/shape_watch_btn"
            android:text="@string/watch"
            android:textColor="@color/white" />

        <View
            android:layout_width="@dimen/d30"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d80" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d30"
        android:layout_marginRight="@dimen/d30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/WeChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weixinfriend"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/WeChat"
            android:textSize="@dimen/s13" />


        <TextView
            android:id="@+id/moments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/moments"
            android:gravity="center"
            android:src="@mipmap/moments"
            android:text="@string/moments"
            android:textSize="@dimen/s13" />


        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qqfriend"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/QQfriend"
            android:textSize="@dimen/s13" />


        <TextView
            android:id="@+id/qzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/qzone"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/qzone"
            android:textSize="@dimen/s13" />


        <TextView
            android:id="@+id/weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawableTop="@mipmap/weibo"
            android:gravity="center"
            android:src="@mipmap/weixinfriend"
            android:text="@string/weibo"
            android:textSize="@dimen/s13" />

    </LinearLayout>

</LinearLayout>