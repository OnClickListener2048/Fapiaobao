<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.pilipa.fapiaobao.ui.widget.AdjustTextView
        android:id="@+id/invoice_type"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginLeft="@dimen/d12"
        android:layout_marginRight="@dimen/d12"
        android:layout_marginTop="@dimen/d6"
        android:layout_marginBottom="@dimen/d6"
        android:clickable="true"
        android:textColor="@drawable/selector_invoice_type_text"
        android:background="@drawable/selector_invoice_type_bg"
        android:gravity="center"
        android:lines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="13sp" />
</LinearLayout>