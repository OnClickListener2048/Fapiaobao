<?xml version="1.0" encoding="utf-8"?>
<com.pilipa.fapiaobao.ui.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/shape_item_receipt"
        android:scaleType="fitXY"
        android:id="@+id/iv_image_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <CheckBox
        android:id="@+id/rb"
        android:layout_gravity="top|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.pilipa.fapiaobao.ui.widget.SquareFrameLayout>