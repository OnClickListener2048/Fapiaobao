<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d10"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/main_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/publish_cautions" />

    <LinearLayout
        android:layout_margin="@dimen/d10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200"
        android:background="@drawable/shape_rect_demand_info">

        <EditText
            android:layout_gravity="top"
            android:gravity="top"
            android:id="@+id/et_publish_cautions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/awareness"
            android:padding="@dimen/d10"
            android:textSize="@dimen/s16" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_publish_now"
        android:layout_height="@dimen/d45"
        android:layout_margin="@dimen/d10"
        android:background="@color/main_style"
        android:text="@string/publish"
        android:layout_width="match_parent"
        android:textColor="@color/white" />

</LinearLayout>