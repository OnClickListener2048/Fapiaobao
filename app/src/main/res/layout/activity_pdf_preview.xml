<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/pdfView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:gravity="top">


        <ImageView
            android:id="@+id/_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/drawable_scan"
            android:src="@mipmap/estimate_back_brawn" />
    </RelativeLayout>




    <Button
        android:id="@+id/save_to_invoice_clip"
        android:layout_width="@dimen/d147"
        android:layout_height="@dimen/d45"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/d13"
        android:layout_marginEnd="@dimen/d13"
        android:background="@drawable/selector_mainstyle_to_transparent"
        android:text="@string/save_to_invoice_clip"
        android:textColor="@color/white" />
</FrameLayout>