<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/d18"
                android:textColor="@color/title"
                android:text="@string/company_details" />

            <ImageView
                android:id="@+id/details_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d10"
                android:src="@mipmap/estimate_back_brawn" />

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/add_company" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_below="@+id/ll_title"
        android:layout_above="@+id/btn_save"
        android:id="@+id/vp_verpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:paddingLeft="@dimen/d5"
        android:paddingRight="@dimen/d20"
         />
    <Button
        android:id="@+id/btn_save"
        android:visibility="gone"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginBottom="@dimen/d15"
        android:background="@drawable/bg_btn_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>