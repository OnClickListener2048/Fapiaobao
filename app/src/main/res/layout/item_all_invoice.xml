<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/invoice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d13" />

    <com.pilipa.fapiaobao.ui.widget.LabelsView
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:id="@+id/labels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelBackground="@drawable/selector_invoice_receipt_kind_bg"
        app:labelTextColor="@drawable/selector_invoice_receipt_kind_text"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="10dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextPaddingRight="10dp"
        app:labelTextSize="14sp"
        app:lineMargin="10dp"
        app:selectType="SINGLE"
        app:wordMargin="10dp">

    </com.pilipa.fapiaobao.ui.widget.LabelsView>
</LinearLayout>