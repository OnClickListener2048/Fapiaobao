<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/dl"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/d18"
                android:textColor="@color/title"
                android:text="测测红包" />

            <ImageView
                android:id="@+id/estimate_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d10"
                android:src="@mipmap/estimate_back" />

            <TextView
                android:visibility="gone"
                android:id="@+id/filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d10"
                android:text="@string/filter"
                android:textColor="@color/main_style" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="@string/receipt_amount" />

                <RelativeLayout
                    android:layout_width="@dimen/d200"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <EditText
                        android:id="@+id/et_estimate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d50"
                        android:background="@null"
                        android:gravity="center_horizontal"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textColor="@color/red_estimate"
                        android:textSize="@dimen/s25"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:text="@string/yuan" />
            </LinearLayout>
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/hasRedbag"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:weightSum="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d10" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d1"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_marginRight="@dimen/d20"
                        android:background="@color/gray_line" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d5" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/ll_estimate_caution"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center_horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/caution"
                                android:drawablePadding="@dimen/d5"
                                android:text="请如实填写,与票面合计金额保持一致,否则将被拒收"
                                android:textColor="@color/main_style"
                                android:textSize="@dimen/s13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d20"
                            android:id="@+id/ll_filter_condition_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="您的筛选条件:"
                                android:textSize="12sp" />

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/d10"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/filter_condition_top"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main_style"
                                android:textSize="12sp" />

                            <android.support.v4.widget.Space
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/reset_filter_top"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="重新筛选"
                                android:textColor="@color/main_style" />
                        </LinearLayout>


                    </FrameLayout>


                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d20" />

                    <LinearLayout
                        android:id="@+id/ll_filter_types_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d20"
                        android:layout_marginRight="@dimen/d20"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/filter"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d10" />

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/receipt_kind"
                                android:textSize="@dimen/s12" />

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/d10"
                                android:layout_height="match_parent" />

                            <com.pilipa.fapiaobao.ui.widget.LabelsView
                                android:id="@+id/labels"
                                app:labelBackground="@drawable/selector_estimate_kind_bg"
                                app:labelTextColor="@drawable/selector_estimate_kind_text"
                                app:labelTextPaddingBottom="5dp"
                                app:labelTextPaddingLeft="10dp"
                                app:labelTextPaddingRight="10dp"
                                app:labelTextPaddingTop="5dp"
                                app:labelTextSize="12sp"
                                app:lineMargin="10dp"
                                app:maxSelect="0"
                                app:selectType="SINGLE"
                                app:wordMargin="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </com.pilipa.fapiaobao.ui.widget.LabelsView>
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d10" />

                        <LinearLayout
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="开票地区:"
                                android:textSize="@dimen/s12" />

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/d10"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/locating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@mipmap/locating"
                                android:drawablePadding="@dimen/d5"
                                android:text="定位中..."
                                android:textSize="@dimen/s13" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/select_other_area"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="选择其他省市"
                                android:textColor="@color/main_style"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>


                    </LinearLayout>

                    <android.support.v4.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d10" />

                    <FrameLayout
                        android:layout_gravity="center"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d170">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/estimate_2" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@mipmap/estimate_1"
                            android:translationY="75dp" />

                        <LinearLayout
                            android:layout_marginBottom="@dimen/d10"
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clipToPadding="false"
                            android:clipChildren="true"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_marginTop="@dimen/d50"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:clipToPadding="false"
                                    android:clipChildren="false"
                                    android:id="@+id/estimate_please"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/d1">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="2"
                                        android:src="@mipmap/redbag"
                                        android:textColor="@color/red_estimate"
                                        android:transformPivotY="@dimen/d20" />
                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom"
                                    android:id="@+id/ll_bonus"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:clipToPadding="false"
                                    android:clipChildren="false"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/estimate_redbag" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/bonus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="10.0"
                                            android:textColor="@color/red_estimate"
                                            android:textSize="35sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/yuan" />
                                    </LinearLayout>


                                </LinearLayout>
                            </FrameLayout>


                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clipToPadding="false"
                                android:clipChildren="false">

                                <Button
                                    android:id="@+id/test_redbag"
                                    android:layout_width="@dimen/d240"
                                    android:layout_height="@dimen/d40"
                                    android:background="@drawable/estimate_test_redbag"
                                    android:text="@string/test_red_bag"
                                    android:textColor="@color/white" />
                            </RelativeLayout>
                        </LinearLayout>


                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d10" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/ll_filter_key"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal">
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/confirm_caution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:elevation="@dimen/d5"
                            android:translationZ="@dimen/d5"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d200"
                            android:layout_marginLeft="@dimen/d15"
                            android:layout_marginRight="@dimen/d15"
                            android:background="@drawable/selector_estimate_receipt_kind_bg"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d10"
                                android:orientation="horizontal">

                                <android.support.v4.widget.Space
                                    android:layout_width="@dimen/d20"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:textColor="@color/main_style"
                                    android:id="@+id/tv_label"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1" />

                                <ImageView
                                    android:id="@+id/tolast"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/d10"
                                    android:src="@drawable/selector_estimate_toleft" />

                                <ImageView
                                    android:id="@+id/tonext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/d20"
                                    android:src="@drawable/selector_estimate_toright" />


                            </LinearLayout>

                            <com.tmall.ultraviewpager.UltraViewPager
                                android:id="@+id/ultra_viewpager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></com.tmall.ultraviewpager.UltraViewPager>
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d20" />

                        <Button
                            android:id="@+id/go"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d40"
                            android:layout_marginLeft="@dimen/d20"
                            android:layout_marginRight="@dimen/d20"
                            android:background="@color/main_style"
                            android:text="@string/confirm_receipt"
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/noredbag"
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/noredbag" />

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d10" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/other_demand"
                                android:layout_width="@dimen/d150"
                                android:layout_height="@dimen/d35"
                                android:layout_weight="1"
                                android:background="@mipmap/otherdemand"
                                android:text="回首页"
                                android:textColor="@color/white" />

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/d20"
                                android:layout_height="match_parent" />

                            <Button
                                android:id="@+id/reset_filter"
                                android:layout_width="@dimen/d150"
                                android:layout_height="@dimen/d35"
                                android:layout_weight="1"
                                android:background="@mipmap/otherdemand"
                                android:text="重新设置筛选条件"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <android.support.v4.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d10" />

                        <LinearLayout
                            android:id="@+id/ll_filter_condition_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="您的筛选条件:"
                                android:textSize="12sp" />

                            <android.support.v4.widget.Space
                                android:layout_width="@dimen/d10"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/filter_condition_bottom"
                                android:textColor="@color/main_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

        </android.support.v4.widget.NestedScrollView>




    </LinearLayout>

    <FrameLayout
        android:id="@+id/dl_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end">
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>