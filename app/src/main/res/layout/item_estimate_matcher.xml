<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="@dimen/d15"
        android:elevation="@dimen/d5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/d5">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publish_cautions"
                android:textColor="@color/main_style" />


            <TextView
                android:id="@+id/publish_cautions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accept_receipt_kind"
                android:textColor="@color/main_style" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d5" />

            <com.pilipa.fapiaobao.ui.widget.LabelsView
                app:labelBackground="@drawable/selector_invoice_receipt_kind_bg"
                app:labelTextColor="@drawable/selector_invoice_receipt_kind_text"
                app:labelTextPaddingBottom="5dp"
                app:labelTextPaddingLeft="10dp"
                app:labelTextPaddingTop="5dp"
                app:labelTextPaddingRight="10dp"
                app:labelTextSize="14sp"
                app:lineMargin="10dp"
                app:selectType="SINGLE"
                app:wordMargin="10dp"
                android:id="@+id/labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.pilipa.fapiaobao.ui.widget.LabelsView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>