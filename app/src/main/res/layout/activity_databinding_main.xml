<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainviewmodel"
            type="com.pilipa.fapiaobao.databinding.main.viewmodel.MainViewModel"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".databinding.main.MainDatabindingActivity">

        <LinearLayout
            android:id="@+id/activity_main_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".databinding.main.MainDatabindingActivity">

            <FrameLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <fragment
                android:id="@+id/fag_nav"
                android:name="com.pilipa.fapiaobao.ui.fragment.NavFragment"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@color/black"
            android:visibility="gone">

        </FrameLayout>

    </FrameLayout>
</layout>