<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_reject_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginLeft="@dimen/d15"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="发票金额" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:gravity="left|center_vertical"
                android:background="@drawable/bg_express"
                android:paddingLeft="@dimen/d15"
                android:layout_marginLeft="@dimen/d15"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_amount_reject"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="请输入该张发票票面金额"
                    android:background="@null"
                    android:textSize="@dimen/s14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yuan" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="驳回原因" />

                <Spinner
                    android:id="@+id/mSpinner"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d15"
                    android:animationCache="true"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/reasons"></Spinner>
            </LinearLayout>

            <EditText
                android:layout_marginTop="@dimen/d5"
                android:id="@+id/edt_reason_reject"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/d3"
                android:hint="@string/hint_reject"
                android:textSize="@dimen/d12"
                android:background="@drawable/bg_express"
                android:lines="3" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/d10"
        android:id="@+id/ll_save_to_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cancel_reject"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_qualified"
            android:gravity="center"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d50"
            android:paddingRight="@dimen/d50"
            android:paddingTop="@dimen/d10"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <TextView
           android:id="@+id/tv_Unqualified_reject"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_width="60dp"
            android:paddingBottom="@dimen/d10"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10"
            android:paddingTop="@dimen/d10"
           android:layout_height="wrap_content"
           android:textColor="@color/main_style"
           android:text="@string/confirm"/>
    </LinearLayout>
</LinearLayout>