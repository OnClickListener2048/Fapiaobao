<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <View style="@style/layout_title_bottom_line"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/upload_receipt"
            android:textSize="@dimen/s18"/>

        <ImageView
            android:id="@+id/upload_back"
            android:layout_width="@dimen/d48"
            android:layout_height="@dimen/d48"
            android:background="@drawable/drawable_scan"
            android:src="@mipmap/estimate_back_brawn" />

        <ImageView
            android:id="@+id/upload_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/d10"
            android:src="@mipmap/upload_scan"
            android:text="@string/filter"
            android:textColor="@color/main_style"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d10" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/hurry_up"
                    android:textColor="@color/main_style" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d10" />

                <LinearLayout
                    android:id="@+id/ll_container_paper_normal_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d10"
                        android:text="@string/paper_normal_receipt"
                        android:textColor="@color/main_style" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d10" />

                    <FrameLayout
                        android:id="@+id/container_paper_normal_receipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d10" />

                <LinearLayout
                    android:id="@+id/ll_container_paper_special_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d10"
                        android:text="@string/paper_special_receipt"
                        android:textColor="@color/main_style" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d10" />

                    <FrameLayout
                        android:id="@+id/container_paper_special_receipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </FrameLayout>
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d10" />

                <LinearLayout
                    android:id="@+id/ll_container_paper_elec_receipt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/d10"
                        android:text="@string/paper_elec_receipt"
                        android:textColor="@color/main_style" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d10" />

                    <FrameLayout
                        android:id="@+id/container_paper_elec_receipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>




        </android.support.v4.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <Button
                android:id="@+id/upload_receipt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d45"
                android:layout_marginBottom="@dimen/d5"
                android:layout_marginEnd="@dimen/d20"
                android:layout_marginStart="@dimen/d20"
                android:layout_marginTop="@dimen/d5"
                android:background="@drawable/selector_mainstyle_to_transparent"
                android:text="@string/confirm"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>