<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/d18"
            android:textColor="@color/title"
            android:text="@string/feedback" />

        <ImageView
            android:id="@+id/feedback_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d10"
            android:src="@mipmap/estimate_back_brawn" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rl_title"
        android:layout_margin="@dimen/d10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d200"
        >

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:background="@drawable/shape_textview_bg"
            android:hint="@string/feedback_hint"
            android:padding="@dimen/d10" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_feedback_confirm"
        android:text="@string/submit"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/d15"
        android:layout_marginRight="@dimen/d15"
        android:layout_marginBottom="@dimen/d6"
        android:layout_marginTop="@dimen/d6"
        android:background="@drawable/bg_btn_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>