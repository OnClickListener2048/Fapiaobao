<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/s18"
            android:textColor="@color/title"
            android:text="@string/my_wallet" />

        <ImageView
            android:id="@+id/_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_scan"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/estimate_back_brawn"/>
        <TextView
            android:id="@+id/tv_recharge_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/selector_union_main_style_text"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d10"
            android:text="@string/details"/>

    </RelativeLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d6"
            android:text="@string/balance"/>
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d6"
                android:text="@string/zero"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_recharge"
            android:layout_weight="1"
            android:layout_width="@dimen/d50"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/d10"
            android:background="@drawable/selector_grey_shape_to_transparent"
            android:textColor="@drawable/selector_union_grey_text"
            android:text="@string/recharge"/>
        <Button
            android:id="@+id/btn_withdraw"
            android:layout_weight="1"
            android:layout_width="@dimen/d50"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_grey_shape_to_transparent"
            android:textColor="@drawable/selector_union_grey_text"
            android:text="@string/withdraw"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginLeft="@dimen/d10"
        android:background="@color/gray_line" />
    <RelativeLayout
        android:id="@+id/my_red_envelope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawable_scan"
        >
        <TextView
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@mipmap/enter_wallet"
            android:text="@string/red_envelope"/>
        <TextView
            android:id="@+id/tv_bouns"
            android:drawablePadding="@dimen/d20"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/d50"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_style"
            android:text="@string/zero"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginLeft="@dimen/d10"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_line" />

</LinearLayout>