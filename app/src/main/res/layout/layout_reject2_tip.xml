<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_tip_bg"
        android:orientation="vertical"
        android:paddingStart="@dimen/d22"
        android:paddingTop="@dimen/d22">

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_reject_finish"
            android:textColor="@color/title_small"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d35"
            android:gravity="end">

            <TextView
                android:id="@+id/btn_cancel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/main_style"
                android:visibility="gone" />

            <TextView
                android:id="@+id/i_know"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="@dimen/d22"
                android:text="知道了"
                android:textColor="@drawable/selector_union_main_style_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>