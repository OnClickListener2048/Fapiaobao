<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/tip_bg"
        android:layout_margin="@dimen/d20"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d10"
            android:textColor="@color/white"
            android:text="收票截止时间:"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginRight="@dimen/d30"
            android:layout_marginTop="@dimen/d20"
            android:layout_below="@+id/thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d10"
                android:layout_marginRight="@dimen/d10"
                android:textColor="@color/white"

                android:text="对于电子发票,此时间点为最终确认合格的截止时间点;对于邮寄的纸质发票,此时间点为收到纸质发票的截止时间点(通常邮寄时间为3-5天)."/>

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_marginRight="@dimen/d30"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/i_know"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="我知道了"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>