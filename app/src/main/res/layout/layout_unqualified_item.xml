<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/layout_unqualified_item"
    android:layout_height="220dp">
    <TextView
        android:id="@+id/reject_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d10"
        android:layout_marginLeft="@dimen/d13"
        android:layout_marginRight="@dimen/d13"
        android:text="提供金额：0元"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/d13"
        android:layout_marginRight="@dimen/d13"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="驳回原因："/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="@dimen/d10"
        android:background="@drawable/edittext_bg"
        android:orientation="horizontal"
        android:padding="@dimen/d10">

        <TextView
            android:id="@+id/tv_reject_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:textSize="@dimen/s12"
            android:text="" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_select_qualified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/qualified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_qualified"
                android:paddingBottom="@dimen/d10"
                android:paddingLeft="@dimen/d50"
                android:paddingRight="@dimen/d50"
                android:paddingTop="@dimen/d10"
                android:text="@string/qualified"
                android:textColor="@color/white" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/d20"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/unqualified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unqualified"
                android:textColor="@color/main_style" />

            <android.support.v4.widget.Space
                android:layout_width="@dimen/d10"
                android:layout_height="match_parent" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/ll_save_to_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/confirm_back"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="@dimen/d13"
                android:background="@drawable/shape_qualified"
                android:paddingBottom="@dimen/d10"
                android:paddingTop="@dimen/d10"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                 />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>