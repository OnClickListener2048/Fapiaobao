<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_incoming_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/d12"
        android:layout_marginStart="@dimen/d11"
        android:src="@mipmap/publish_new"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_total_amount"
            style="@style/demand_item_highlight_text"
            tools:text="1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_total_amount"
            android:layout_toEndOf="@+id/tv_total_amount"
            android:text="@string/yuan"
            android:textSize="@dimen/s10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_total_amount"
            android:text="需求总额"
            android:textColor="#959595"
            android:textSize="@dimen/s10"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_already_collected"
            style="@style/demand_item_highlight_text"
            tools:text="500"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_already_collected"
            android:layout_toEndOf="@+id/tv_already_collected"
            android:text="@string/yuan"
            android:textSize="@dimen/s10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_already_collected"
            android:text="已收集"
            android:textColor="#959595"
            android:textSize="@dimen/s10"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/d14"
        android:layout_marginTop="@dimen/d14"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_wait_collected"
            style="@style/demand_item_highlight_text"
            tools:text="200"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_wait_collected"
            android:layout_toEndOf="@+id/tv_wait_collected"
            android:text="@string/yuan"
            android:textSize="@dimen/s10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wait_collected"
            android:text="待收集"
            android:textColor="#959595"
            android:textSize="@dimen/s10"/>
    </RelativeLayout>

    <View
        android:layout_width="@dimen/d0.5"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:layout_marginBottom="@dimen/d10"
        android:layout_marginTop="@dimen/d10"
        android:background="@color/gray_line"/>

    <TextView
        android:id="@+id/tv_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/d11"
        android:layout_marginStart="@dimen/d11"
        android:gravity="center"
        android:textSize="@dimen/s10"
        tools:text="20天\n距收集截止时间"/>
</LinearLayout>