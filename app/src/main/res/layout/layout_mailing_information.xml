<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/layout_mailing_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d2"
        android:layout_marginLeft="@dimen/d20"
        android:layout_marginRight="@dimen/d20"
        android:layout_marginTop="@dimen/d20"
        android:background="@drawable/receipt_info_bg"
        android:elevation="@dimen/d10"
        android:translationZ="@dimen/d5"
        app:cardCornerRadius="@dimen/d10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d10"
                    android:text="@string/mailing"
                    android:textColor="@color/text_normal_item"
                    android:textSize="@dimen/d12" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d20" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/low_limit"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_low_limit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/d20"
                            android:text="0元"
                            android:textColor="@color/main_style"
                            android:textSize="@dimen/d12" />
                        <ImageView
                            android:id="@+id/question"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:src="@mipmap/question"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/consignee"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d20"
                            android:text=""
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/contact"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/d20"
                            android:text=""
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                        <ImageView
                            android:id="@+id/link_to_telephone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:src="@mipmap/link_to_me"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/fixed_line"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/d20"
                            android:text=""
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <ImageView
                            android:id="@+id/link_to_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:src="@mipmap/link_to_me"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/d8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/address_details"
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />

                        <TextView
                            android:id="@+id/tv_publish_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d20"
                            android:text=""
                            android:textColor="@color/title_small"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d0.5"
                android:layout_marginBottom="@dimen/d5"
                android:layout_marginTop="@dimen/d5"
                android:background="@color/gray_line"></View>
            <FrameLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_logisticsInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d10"
                            android:text="@string/ogistics_info"
                            android:textColor="@color/text_normal_item"
                            android:textSize="@dimen/d12" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/d15">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/d10"
                                android:text="@string/ogistics_company"
                                android:textColor="@color/title_small"
                                android:textSize="@dimen/d12" />

                            <Spinner
                                android:id="@+id/mSpinner"
                                style="@style/spinner_style"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d5"
                                android:animationCache="true"
                                android:drawSelectorOnTop="true"></Spinner>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:paddingLeft="@dimen/d15"
                            android:paddingRight="@dimen/d15">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/d10"
                                android:gravity="center"
                                android:text="@string/ogistics_num"
                                android:textColor="@color/title_small"
                                android:textSize="@dimen/d12" />
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d5"
                                android:background="@drawable/bg_express">
                                <EditText
                                    android:id="@+id/edt_oddNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/btn_scan"
                                    android:background="@null"
                                    android:digits="@string/alphabet_and_number"
                                    android:inputType="text"
                                    android:lines="1"
                                    android:maxLength="14"
                                    android:paddingLeft="@dimen/d15" />
                                <ImageView
                                    android:id="@+id/btn_scan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:background="@null"
                                    android:padding="@dimen/d15"
                                    android:src="@mipmap/scan"
                                    android:textColor="@color/main_style"
                                    />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d15"
                        android:gravity="center"
                        android:text="请确认实际发票与影像信息一致"
                        android:textColor="@color/main_style"
                        android:textSize="@dimen/s11" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="否则退回的快递费将由您个人承担"
                        android:textColor="@color/main_style"
                        android:textSize="@dimen/s11" />
                    <Button
                        android:id="@+id/btn_mailing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="@dimen/d15"
                        android:background="@drawable/shape_receipt_type"
                        android:text="@string/express_mail"
                        android:textColor="@color/main_style" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/mail_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d40"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="您当前可邮寄总额："
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d15" />

                        <TextView
                            android:id="@+id/tv_current_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="0"
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yuan"
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d40"
                        android:layout_marginTop="@dimen/d10"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="需求最低寄送金额："
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d15" />

                        <TextView
                            android:id="@+id/tv_minMail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="0"
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/yuan"
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d15" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d23"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/no_mail"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d5"
                            android:text="未满足最低寄送金额，还不能邮寄哦~"
                            android:textColor="@color/olive"
                            android:textSize="@dimen/d12" />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>