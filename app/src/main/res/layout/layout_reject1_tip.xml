<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="314dp"
        android:layout_height="141dp"
        android:background="@drawable/shape_tip_bg"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="19dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#959595"
            android:text="温馨提示"/>
        <TextView
            android:id="@+id/tv_tip"
            android:layout_below="@+id/text"
            android:layout_marginTop="@dimen/d13"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:textSize="13sp"
            android:textColor="@color/title_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip_reject_start"/>

        <LinearLayout
            android:gravity="end|bottom"
            android:layout_below="@+id/tv_tip"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/know"
                android:textColor="@drawable/selector_union_main_style_text" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>