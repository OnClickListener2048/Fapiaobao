<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="141dp"
        android:background="@drawable/shape_tip_bg"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginStart="@dimen/d30"
            android:layout_marginTop="@dimen/d50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_small"
                android:textSize="13sp"
                android:text="@string/withdraw_to_amount"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="end"
            android:layout_marginEnd="@dimen/d30"
            android:layout_marginStart="@dimen/d50"
            android:layout_marginTop="@dimen/d10"
            android:layout_marginBottom="@dimen/d20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_cancel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@drawable/selector_union_main_style_text"
                android:text="@string/cancel"/>
            <Button
                android:id="@+id/btn_confirm"
                android:background="@null"
                android:textColor="@drawable/selector_union_main_style_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>