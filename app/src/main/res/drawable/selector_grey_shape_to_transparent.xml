        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/d2" android:bottomRightRadius="@dimen/d2" android:radius="@dimen/d2" android:topLeftRadius="@dimen/d2" android:topRightRadius="@dimen/d2" />
