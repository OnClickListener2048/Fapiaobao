<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/main_style" />
            <corners android:radius="4dp" />
            <solid android:color="@android:color/white" />
            <size android:height="@dimen/d50" android:width="@dimen/d200" />
        </shape>
    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <stroke android:width="1dp" android:color="@color/main_style" />
            <corners android:radius="4dp" />
            <solid android:color="@android:color/white" />
            <size android:height="@dimen/d20" android:width="@dimen/d50" />
        </shape>
    </item>
</selector>