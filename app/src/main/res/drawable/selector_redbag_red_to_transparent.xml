<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_estimate" />
            <corners android:bottomLeftRadius="@dimen/d23"
                android:bottomRightRadius="@dimen/d23"
                android:radius="@dimen/d46"
                android:topLeftRadius="@dimen/d23"
                android:topRightRadius="@dimen/d23"  />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red_estimate_transparent" />
            <corners android:bottomLeftRadius="@dimen/d23"
                android:bottomRightRadius="@dimen/d23"
                android:radius="@dimen/d46"
                android:topLeftRadius="@dimen/d23"
                android:topRightRadius="@dimen/d23"  />
        </shape>
    </item>
</selector>